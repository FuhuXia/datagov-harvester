    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false,
            "logToFile": true
        },
        {
            "name": "Python: Run Harvest",
            "type": "debugpy",
            "request": "launch",
            "program": "harvester/harvest.py",
            "args": ["3ba23321-b76f-470a-8035-25e47f06e995"]
        }
    ]
}
